generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Email {
  id        Int         @id @default(autoincrement())
  shortUrls ShortUrl[]  
}

model ShortUrl {
  id        Int      @id @default(autoincrement())
  shortUrl  String   @unique
  longUrl   String
  owner     Email    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId   Int 
  createdAt DateTime @default(now())
}